<p id="notice"><%= notice %></p>

<h1>Listing Wikis</h1>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Private</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @wikis.each do |wiki| %>
      <tr>
        <td><%= wiki.title %></td>
        <td><%= wiki.private  %></td>
        <td><%= wiki.user.email %></td>
        <td><%= link_to 'View', wiki %></td>
        <td><%= link_to 'Edit', edit_wiki_path(wiki) %></td>
        <td>
          <% if current_user.admin? %>
          <%= link_to 'Delete', wiki, method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Wiki', new_wiki_path %>
